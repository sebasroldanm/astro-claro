---
import Layout from "../layouts/Layout.astro";
import { getAssetUrl } from "../utils/url";
---

<Layout title="About">
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 space-y-12">
      <!-- Banner principal -->
      <div>
        <img
          src={getAssetUrl("/conoce/hero.jpg")}
          alt="Tú puedes descargar cupones, Tú tienes Claro club"
        />
      </div>

      <!-- Título y tarjetas de categorías -->
      <div class="grid grid-cols-2 gap-4">
        <!-- Texto -->
        <div class="px-3 pt-5">
          <h2 class="text-2xl lg:text-3xl font-bold text-gray-800 text-center">
            En <span class="text-red-600">Claro club</span> ya tienes beneficios
            sin costo adicional por ser usuario:
          </h2>
        </div>

        <!-- Cards -->
        <div class="grid grid-cols-3 gap-2">
          <!-- Prepago -->
          <div
            class="w-32 md:w-40 bg-white rounded-xl shadow-lg overflow-hidden"
          >
            <img
              src={getAssetUrl("/conoce/prepago.png")}
              alt="Prepago"
              class="w-full h-32 object-cover"
            />
            <div class="py-2 text-center">
              <p class="text-sm font-medium text-gray-700">Prepago</p>
            </div>
          </div>
          <!-- Postpago -->
          <div
            class="w-32 md:w-40 bg-white rounded-xl shadow-lg overflow-hidden"
          >
            <img
              src={getAssetUrl("/conoce/postpago.png")}
              alt="Postpago"
              class="w-full h-32 object-cover"
            />
            <div class="py-2 text-center">
              <p class="text-sm font-medium text-gray-700">Postpago</p>
            </div>
          </div>
          <!-- Hogar -->
          <div
            class="w-32 md:w-40 bg-white rounded-xl shadow-lg overflow-hidden"
          >
            <img
              src={getAssetUrl("/conoce/hogar.png")}
              alt="Hogar"
              class="w-full h-32 object-cover"
            />
            <div class="py-2 text-center">
              <p class="text-sm font-medium text-gray-700">Hogar</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
