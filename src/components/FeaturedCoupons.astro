---
import coupons from '../data/coupons.json';
import { getAssetUrl, getUrl } from '../../src/utils/url';
---

<section class="py-4 md:py-5">
  <h2 class="text-xl md:text-2xl font-bold text-gray-800 text-center mb-4 md:mb-8">Cupones destacados</h2>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 md:gap-8 px-2 md:px-10">
    {coupons.map((coupon) => (
      <article
        class="bg-white rounded-xl md:rounded-2xl shadow-md hover:shadow-lg transform hover:-translate-y-1 transition duration-300 flex flex-col overflow-hidden"
        aria-labelledby={`title-${coupon.slug}`}
      >
        <figure class="relative h-32 sm:h-36 md:h-40 w-full">
          <img
            src={getAssetUrl(coupon.image)}
            alt={`Imagen del cupón ${coupon.brand}`}
            class="object-cover w-full h-full"
            transition:name={`img-${coupon.slug}`}
          />
        </figure>

        <div class="p-3 md:p-5 flex-1 flex flex-col justify-between">
          <header>
            <div class="flex items-center space-x-2 md:space-x-3 mb-2 md:mb-3">
              <div
                class={`flex items-center justify-center w-8 h-8 md:w-10 md:h-10 rounded-md ${coupon.bgColor}`}
                aria-hidden="true"
              >
                <img
                  src={getAssetUrl(coupon.logo)}
                  alt={`${coupon.brand} logo`}
                  class="h-5 w-5 md:h-6 md:w-6 object-contain"
                  transition:name={`logo-${coupon.slug}`}
                />
              </div>
              <span class="text-[10px] md:text-xs text-gray-500 font-medium">{coupon.category || 'Comidas'}</span>
            </div>

            <h3 id={`title-${coupon.slug}`} class="text-sm md:text-base font-semibold text-gray-800 mb-1 md:mb-2" transition:name={`title-${coupon.slug}`}>
              {coupon.discount}
            </h3>
          </header>

          <div class="mb-3 md:mb-4">
            <p class="text-[10px] md:text-xs text-gray-400 flex items-center gap-1">
              <svg
                class="w-3 h-3 md:w-4 md:h-4 flex-shrink-0"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M8 7V3m8 4V3m-9 8h10m-6 4h2m-2 4h2m-7 4h10a2 2 0 002-2V7a2 2 0 00-2-2h-3.586a1 1 0 01-.707-.293l-1.414-1.414a1 1 0 00-.707-.293H9.586a1 1 0 00-.707.293L7.464 4.707A1 1 0 016.757 5H3a2 2 0 00-2 2v12a2 2 0 002 2h3"
                />
              </svg>
              {coupon.valid}
            </p>
          </div>

          <a
            href={getUrl(`/cupones/${coupon.slug}`)}
            class="mt-auto block text-center bg-red-600 text-white text-xs md:text-sm font-semibold py-1.5 md:py-2 rounded-lg hover:bg-red-700 transition"
            aria-label={`Ir al detalle del cupón ${coupon.brand}`}
            transition:name={`btn_download-${coupon.slug}`}
          >
            {coupon.button}
          </a>
        </div>
      </article>
    ))}
  </div>
</section>
