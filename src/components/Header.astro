---
const current: string = Astro.url.pathname;
function linkClass(path: string): string {
  const base = "py-1.5 md:py-2 px-2 md:px-4 font-medium";
  const active = "bg-red-600 text-white";
  const inactive = "text-gray-700 hover:text-red-600";
  return `${base} ${current === path ? active : inactive}`;
}
---
<header class="bg-red-600 py-2 sticky top-0 z-50">
  <div class="container mx-auto flex justify-between items-center px-2 md:px-4">
    <!-- Logo -->
    <div class="text-white text-lg font-bold">
      <a href="/">
        <img src="/logo.webp" alt="Logo Claro Club" class="w-24 md:w-32" />
      </a>
    </div>

    <!-- Espacio vacío en móvil, barra de búsqueda en desktop -->
    <div class="hidden md:flex flex-1 max-w-lg mx-6">
      <div class="relative w-full">
        <div
          class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none"
        >
          <svg
            class="w-4 h-4 text-gray-400"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
        </div>
        <input
          type="text"
          placeholder="Busca tus cupones"
          class="w-full pl-10 pr-4 py-1.5 rounded-[5px] text-gray-700 text-sm bg-white border border-gray-200 focus:outline-none focus:ring-2 focus:ring-white focus:ring-opacity-50"
        />
      </div>
    </div>

    <!-- Botón Iniciar sesión -->
    <div class="hidden md:flex items-center">
      <svg
        class="w-4 h-4 text-white mr-2"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
        ></path>
      </svg>
      <button class="text-white text-sm hover:text-gray-200"
        >Inicia sesión</button
      >
    </div>

    <!-- Icono de usuario en móvil -->
    <div class="md:hidden">
      <button class="text-white">
        <svg
          class="w-5 h-5"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
          ></path>
        </svg>
      </button>
    </div>
  </div>
</header>

<!-- Navegación secundaria (oculta en móvil) -->
<nav class="bg-white py-0 border-b border-gray-200 hidden md:block sticky top-[52px] z-40">
  <div class="container mx-auto px-2 md:px-4 justify-items-center">
    <div class="flex space-x-0 md:space-x-1 overflow-x-auto">
      <a href="/" class={`${linkClass("/")} whitespace-nowrap text-xs md:text-sm`}> Inicio </a>
      <a href="#" class={`${linkClass("/categorias")} whitespace-nowrap text-xs md:text-sm`}> Categorías </a>
      <a href="/about" class={`${linkClass("/about")} whitespace-nowrap text-xs md:text-sm`}> Conoce Claro club </a>
    </div>
  </div>
</nav>

<!-- Barra de búsqueda móvil (debajo del header) -->
<div class="md:hidden bg-white py-2 px-3 border-b border-gray-200">
  <div class="relative w-full">
    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
      <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
      </svg>
    </div>
    <input
      type="text"
      placeholder="Busca tus cupones"
      class="w-full pl-10 pr-4 py-2 rounded-[5px] text-gray-700 text-sm bg-white border border-gray-200 focus:outline-none focus:ring-2 focus:ring-red-600 focus:ring-opacity-50"
    />
  </div>
</div>
